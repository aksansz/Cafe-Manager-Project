@model Cafe_Project.Models.Product

@{
    ViewData["Title"] = "InsertProduct";
}

<h1>Add Product</h1>

@*<h4>Product</h4>*@
<hr />
@{
    var productTypes = Cafe_Project.Controllers.HomeController.GetProductTypes();
    }
    <div class="row">
        <div class="col-md-4">
            <form asp-action="InsertProduct">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="name" class="control-label">Product Name</label>
                    <input asp-for="name" class="form-control" />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="price" class="control-label">Price</label>
                    <input asp-for="price" class="form-control" type="number"/>
                    <span asp-validation-for="price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="productTypeId" class="control-label">Product Type</label>
                    @Html.DropDownListFor(x => x.productTypeId,
                    new SelectList(productTypes, "typeId", "typeName"),new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to Home</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
